<div class="d-flex justify-content-center" >
  <div class="parent">
    <%= image_tag("slotmachine/slot-machine.png", id: "parent") %>
    <div class="image1">
    <%= image_tag("slotmachine/#{@slot.slot_1}.png", id: "image_size") %>
    </div>
    <div class="image2">
    <%= image_tag("slotmachine/#{@slot.slot_2}.png", id: "image_size") %>
    </div>
    <div class="image3">
    <%= image_tag("slotmachine/#{@slot.slot_3}.png", id: "image_size") %>
    </div>
  </div>
</div>

<h3 class="d-flex justify-content-center">My Rupees: &#8377; <%= current_user.rupees %></h3>
 <div class="d-flex justify-content-center" >
 <%= form_for @slot, url: slot_machines_path(@slot), method: :patch do |f| %>
        <%= f.hidden_field :bid, value: 1%>
        <%= f.submit "Bid ₹ 1", class: "btn btn-primary" %>&nbsp;
      <% end %>
      </div>
<br>
<div class="d-flex justify-content-center" >
 <%= form_for @slot, url: slot_machines_path(@slot), method: :patch do |f| %>
        <%= f.hidden_field :bid, value: 10%>
        <%= f.submit "Bid ₹ 10", class: "btn btn-primary" %>&nbsp;
      <% end %>
      </div>
    <br>
<%= render partial: "layouts/error", locals: {variable: :won} %>
