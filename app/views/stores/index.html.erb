<%= render 'layouts/error' %>
<div class="row justify-content-center">
<div class="w-75 p-3">
<table class="table table-striped">
  <tr>
    <th scope="col" style="text-align:center">Store Name</th>
    <th scope="col" style="text-align:center">Store Type</th>
    <th scope="col" style="text-align:center"></th>
  </tr>
<% @stores.each do |s| %>
<tr>
  <td style="text-align:center"><%= s.name.split.map { |x| x.capitalize }.join(" ") %></td>
  <td style="text-align:center"><%= s.store_type.capitalize%></td>
  <td style="text-align:center"><%= link_to "Go to Store", store_items_path(s), class: "btn btn-primary"%></td>
    </tr>
  <% end %>
</table>
</div>
</div>