<%= render 'layouts/error' %>
<div class="row justify-content-center">
<div class="w-75 p-3">
<table class="table table-striped">
  <tr>
    <th scope="col">Store Name:</th>
    <th scope="col">Store Type:</th>
    <th scope="col"></th>
  </tr>
<% @stores.each do |s| %>
<tr>
  <td><%= s.name.split.map { |x| x.capitalize }.join(" ") %></td>
  <td><%= s.store_type.capitalize%></td>
  <td><%= link_to "Go to Store", store_path(s), class: "btn btn-primary"%></td>
    </tr>
  <% end %>
</table>
</div>
</div>