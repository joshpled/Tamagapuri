<%= render 'layouts/error' %>
<%= form_for [@user,@monster], url: user_monster_path(@monster), method: :patch, class: "form-group" do |f| %> 
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>
    <%= f.label :color, "Color:" %>
    <%= f.select :color, [["Blue",1],["Green",2],["Red",3],["White",4]]%>
    <%= f.hidden_field :age %>
    <%= f.hidden_field :health %>
    <%= f.hidden_field :happiness %>
    <%= f.hidden_field :hunger %>
    <%= f.hidden_field :boredom %>
    <%= f.submit "Edit Monster" %>
<% end %>