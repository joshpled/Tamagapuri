<div class="card">
  <div class="card-body">
    <h4 class="card-title text-center"><%= @monster.name.upcase %></h4>
    <div class="d-flex justify-content-center">
      <div class="monster_img" id="monster<%= @monster.color %>"></div>
    </div>
    <div class="d-flex justify-content-center">
      Happiness: &nbsp;
      <% @monster.happiness.times do %>
        <%= image_tag("heart.png", size: "20x20") %>&nbsp;
      <% end %>
    </div>
  </div>
</div>
